<% content_for :title, "New task" %>
<div class="max-w-screen-lg mx-auto">
  <h1 class="text-center mt-4">Create New Task</h1>

  <div class="form-container">
    <%= form_with model: @task, url: project_tasks_path() do |form| %>
      <%= render "shared/form_flash", object: form.object %>
      <div>
        <%= form.label :title, class: "label" %>
        <%= form.text_field :title, required: true, class: "input" %>
      </div>

      <div>
        <%= form.label :description, class: "label" %>
        <%= form.text_area :description, rows: 3, class: "input" %>
      </div>

      <%= form.submit "Create Task", class: "btn-primary" %>
    <% end %>
  </div>
</div>
