<%# locals: (object:) %>

<% if flash.any? %>
  <% flash.each do |type, message| %>
    <div class="message <%= type == "notice" ? "notice" : "alert" %>">
      <%= message %>
    </div>
  <% end %>
<% elsif object&.errors&.any? %>
  <% object.errors.messages.each do |_, messages| %>
    <div class="message alert">
      <% messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>
<% end %>